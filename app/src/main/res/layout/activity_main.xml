<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#2E4B60">

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#FFFFFF"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#FFFFFF"
        android:id="@+id/user_picture_block"
        android:layout_gravity="center_horizontal"
        android:contentDescription="user_picture"
        android:src="@drawable/user"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="User"
        android:id="@+id/user_block"
        android:layout_gravity="center_horizontal"
        android:background="#ffffff"
        android:textSize="30sp"
        android:textAlignment="center" />


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="30           214          3  "
        android:id="@+id/number_block"
        android:layout_gravity="center_horizontal"
        android:background="#056AB1"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:text="séries           épisodes       badges"
        android:id="@+id/legende_block"
        android:layout_gravity="center_horizontal"
        android:background="#056AB1"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textAlignment="center" />


</LinearLayout>
